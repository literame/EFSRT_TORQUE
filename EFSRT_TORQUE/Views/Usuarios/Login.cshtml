@model EFSRT_TORQUE.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
}

<main id="Loggeo">


    <h2 class="tituloreg colorg">Iniciar Sesión</h2>

    @using (Html.BeginForm("Login", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div class="fcenter">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="">
            @Html.LabelFor(model => model.NombreUsuario, htmlAttributes: new { @class = "textcenteritem" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "tmn" } })
                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="">
            @Html.LabelFor(model => model.Contrasena, htmlAttributes: new { @class = "textcenteritem" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Contrasena, new { htmlAttributes = new { @class = "tmn" } })
                @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="felxpos checkitem">
            <div class="felxpos">
                @Html.CheckBoxFor(model => model.RememberMe)
            </div>
            @Html.LabelFor(model => model.RememberMe, new { @class = "control-label col-md-2" })

        </div>

        <div class="felxpos">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Iniciar Sesión" class="bborder" />
            </div>
            <div class="bborder">
                @Html.ActionLink("Registrarse", "Registro", null, new { @class = "felxpos" })

            </div>
        </div>
        </div>
    </div>
    }



</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
