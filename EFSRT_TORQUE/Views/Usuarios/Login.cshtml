@model EFSRT_TORQUE.Models.LoginViewModel

@{
    ViewBag.Title = "Iniciar Sesión";
}

<main id="Loggeo">


    <h2 class="tituloreg">Iniciar Sesión</h2>

    @using (Html.BeginForm("Login", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="tituloreg">Usuario</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="boxitem">
                @Html.LabelFor(model => model.NombreUsuario, htmlAttributes: new { @class = "itemText" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "inputsstyle" } })
                    @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="boxitem">
                @Html.LabelFor(model => model.Contrasena, htmlAttributes: new { @class = "itemText" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Contrasena, new { htmlAttributes = new { @class = "inputsstyle" } })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="boxitem">
                @Html.LabelFor(model => model.RememberMe, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.RememberMe)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Iniciar Sesión" class="buttons info" />
                </div>
            </div>
        </div>
    }
    @Html.ActionLink("Registrarse", "Registro", null, new { @class = "buttons info heigthbottom" })


</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
