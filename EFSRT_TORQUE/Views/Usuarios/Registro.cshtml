@model EFSRT_TORQUE.Models.Usuario

@{
    ViewBag.Title = "Registro";
}


<main id="Loggeo">
    <h2 class="tituloreg colorg">Registro</h2>

    @using (Html.BeginForm("Registro", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="fontstyle">Ingresa tus datos para registrarte</h4>
            <hr />
            <div class="fcenter">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="">
                    @Html.LabelFor(model => model.NombreUsuario, htmlAttributes: new { @class = "textcenteritem" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "tmn" } })
                        @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="">
                    @Html.LabelFor(model => model.Contrasena, htmlAttributes: new { @class = "textcenteritem" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Contrasena, new { htmlAttributes = new { @class = "tmn" } })
                        @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "textcenteritem" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "tmn" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="">
                    @Html.LabelFor(model => model.Rol, htmlAttributes: new { @class = "textcenteritem" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "tmn" } })
                        @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="felxpos">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrarse" class="botonform" />
                </div>
                <div class="bborder">
                    @Html.ActionLink("Volver", "Login", "Usuarios", null, new { @class = "felxpos" })

                </div>
            </div>
        </div>
    }
    



</main>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
