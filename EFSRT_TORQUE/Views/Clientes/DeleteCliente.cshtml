@model EFSRT_TORQUE.Models.Clientes

@{
    ViewBag.Title = "Eliminar Cliente";
}

<main>


    <div class="txtTittle">
        <p class="paddistance">Eliminar Clientes</p>
        <ul>
            <li><ion-icon name="newspaper-outline"></ion-icon></li>
            <li><ion-icon name="notifications-outline"></ion-icon></li>
            <li><ion-icon name="person-outline"></ion-icon></li>
        </ul>
    </div>
    <div>
        <div class="paddistance bannermenu">
            <ul>
                <li><p>Cliente a Eliminar</p></li>
            </ul>
        </div>
    </div>

    <div >
        <div>


            <p>¿Estás seguro de que deseas eliminar este cliente?</p>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ClienteID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ClienteID)
                </dd>
                <!-- Agrega más propiedades del cliente si es necesario -->
            </dl>

            @using (Html.BeginForm("Delete", "Clientes", FormMethod.Post, new { id = "deleteForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Eliminar" class="buttons danger" />
                    @Html.ActionLink("Cancelar", "ListarClientes", null, new { @class = "buttons info" })
                </div>
            }
        </div>

        </div>
</main>