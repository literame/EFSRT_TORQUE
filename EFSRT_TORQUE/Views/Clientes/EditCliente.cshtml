@model EFSRT_TORQUE.Models.Clientes

@{
    ViewBag.Title = "Editar Cliente";
}
<main>


    <div class="txtTittle">
        <p class="paddistance">Editar Clientes</p>
        <ul>
            <li><ion-icon name="newspaper-outline"></ion-icon></li>
            <li><ion-icon name="notifications-outline"></ion-icon></li>
            <li><ion-icon name="person-outline"></ion-icon></li>
        </ul>
    </div>
    <div>
        <div class="paddistance bannermenu">
            <ul>
                <li><p>Ingresar Datos</p></li>
            </ul>
        </div>
    </div>

        @using (Html.BeginForm("Edit", "Clientes", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="tituloreg">Clientes</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="boxitem">
                    @Html.LabelFor(model => model.ClienteID, htmlAttributes: new { @class = "itemText" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ClienteID, new { htmlAttributes = new { @class = "inputsstyle" } })
                        @Html.ValidationMessageFor(model => model.ClienteID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="boxitem">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "itemText" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "inputsstyle" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="boxitem">
                    @Html.LabelFor(model => model.Telefono, htmlAttributes: new { @class = "itemText" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "inputsstyle" } })
                        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="boxitem">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "itemText" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "inputsstyle" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="boxitem">
                    @Html.LabelFor(model => model.Direccion, htmlAttributes: new { @class = "itemText" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "inputsstyle" } })
                        @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div >
                        <input type="submit" value="Guardar" class="buttons warning" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver a la lista", "ListarClientes", null, new { @class = "buttons info" })
        </div>

</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
