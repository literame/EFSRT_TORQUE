@model IEnumerable<EFSRT_TORQUE.Models.Productos>

@{
    ViewBag.Title = "Listar Productos";
}

<main class="body">

    <div class="txtTittle">
        <p class="paddistance">Listar Productos</p>
        <ul>
            <li><ion-icon name="newspaper-outline"></ion-icon></li>
            <li><ion-icon name="notifications-outline"></ion-icon></li>
            <li><ion-icon name="person-outline"></ion-icon></li>
        </ul>
    </div>
    <div>
        <div class="paddistance bannermenu">
            <ul>
                <li><p>Buenos Tardes Estrellitas, El Mundo les dice HOLA</p></li>
                <li><p>Gestionar cotizaciones</p></li>
                <li><p>Validar cotizacion</p></li>
            </ul>
        </div>
        <div class="filterMenu paddistance">
            <p>Ordenar:</p>
            <div class="ordermenu">
                <div class="filtersitem">
                    <ul>
                        <li class="dropPopitem">
                            <p>Todos los tipos</p>
                            <ion-icon class="txtcolorgraydark"
                                      name="caret-down-outline"></ion-icon>
                        </li>
                        <li class="dropPopitem">
                            <p>Todos los estados</p>
                            <ion-icon class="txtcolorgraydark"
                                      name="caret-down-outline"></ion-icon>
                        </li>
                        <li class="dropPopitem">
                            <p>Por nombre</p>
                            <ion-icon class="txtcolorgraydark"
                                      name="caret-down-outline"></ion-icon>
                        </li>
                        <li class="dropPopitem">
                            <p>Año: 2024</p>
                            <ion-icon class="txtcolorgraydark"
                                      name="caret-down-outline"></ion-icon>
                        </li>
                        <li class="dropPopitem">
                            <p>Mes: Enero</p>
                            <ion-icon class="txtcolorgraydark"
                                      name="caret-down-outline"></ion-icon>
                        </li>
                    </ul>
                </div>
                <hr />
            </div>
        </div>
    </div>



    <!--
    <p>
        @Html.ActionLink("Agregar Producto", "CreateProducto")
    </p>  -->
    <div class="bannerCotizacion">
        <div>
            <p class="txtcolorgray">Mostrando 1 - 20 resultados</p>
        </div>
        <div>
            <div><img src="" alt="" /></div>
            <div><img src="" alt="" /></div>
            <!-- !! -->
            <div>
                <a>

                    @Html.ActionLink("Agregar Producto", "CreateProducto", new { area = "" }, new { @class = "addcotizacion" })
                </a>
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductoID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProveedorID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProveedorID)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "buttons info" }) |
                    @Html.ActionLink("Detailles", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "buttons warning" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "buttons danger" })

                </td>
            </tr>
        }

    </table>

</main>